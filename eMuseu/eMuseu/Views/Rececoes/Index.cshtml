@model IEnumerable<eMuseu.Models.CustomModelRececoes>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-1">
        <i class="fas fa-briefcase fa-4x visible-lg visible-md"></i>
    </div>
    <div class="col-md-5">
        <h2>Rececoes</h2>
    </div>
</div>

<hr />

<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            Emprestimo
        </th>
        <th>
            Utilizador
        </th>
        <th>
            Data Pedido
        </th>
        <th>
            Data Fim
        </th>
        <th>
            Entregue
        </th>
        <th>
            Ações
        </th>
    </tr>

    @foreach (var item in ViewBag.data)
    {
        <tr>
            <td>
                @item.EmprestimoID
            </td>
            <td>
                @item.NomeP @item.NomeU
            </td>
            <td>
                @item.data_inicio
            </td>
            <td>
                @item.data_fim
            </td>
            <td>
                @item.devolvido
            </td>
            <td>
                @Html.ActionLink("Recebida", "Create", new { id = item.EmprestimoID })
                @Html.ActionLink("Detalhes", "Details", new { id = item.EmprestimoID })
                @Html.ActionLink("Receber", "Create", new { id = item.EmprestimoID })
            </td>
        </tr>
    }

</table>
