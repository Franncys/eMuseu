@model eMuseu.Models.Rececao

@{
    ViewBag.Title = "Create";
}

<h2>Receber Peça</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Peças", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.DropDownList("PecaID", (SelectList)ViewBag.Pecas, "Selecione uma Peça", new { @class = "form-control selectViewPecas" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.antes, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.antes, new { htmlAttributes = new { @class = "form-control antes" } })
            @Html.ValidationMessageFor(model => model.antes, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.depois, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.depois, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.depois, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.cumprimento, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.cumprimento, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.cumprimento, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.formulario, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.formulario, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.formulario, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".selectViewPecas").change(function () {
                var value = $(".selectViewPecas :selected").val();
                var text = $(".selectViewPecas :selected").text();
                if (value) {
                    $.ajax({
                        url: '@Url.Action("GetPeca", "Rececoes")',
                        contentType: "application/json; charset=utf-8",
                        data: { id: value },
                        dataType: "json",
                        error: function (xhr) {
                            console.log(xhr.statusText);
                        },
                        success: function (recData) {
                            $('.antes').val(recData["EstadoAtual"]);
                            console.log(recData["EstadoAtual"]);
                        }
                    });
                } else {
                    $('.antes').val("");
                }
            });
        });
    </script>
}