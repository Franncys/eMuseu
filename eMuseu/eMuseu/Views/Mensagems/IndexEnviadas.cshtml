@model IEnumerable<eMuseu.Models.Mensagem>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mensagens Enviadas</h2>

<table class="table">
    <tr>
        <th>
            Origem
        </th>
        <th>
            Destino
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Msg)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        int result = String.Compare(item.OrigemID, User.Identity.GetUserId(), comparisonType: StringComparison.OrdinalIgnoreCase);
        if (result == 0)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailOri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailDest)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Msg)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MensagemID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MensagemID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MensagemID })
                </td>
            </tr>
        }
    }

</table>
