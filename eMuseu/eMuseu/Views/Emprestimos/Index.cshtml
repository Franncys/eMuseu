@model IEnumerable<eMuseu.Models.Emprestimo>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-1">
        <i class="fas fa-briefcase fa-4x visible-lg visible-md"></i>
    </div>
    <div class="col-md-5">
        <h2>Historial de Empréstimos</h2>
    </div>
</div>
<hr />
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.data_inicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.data_fim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.validado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.devolvido)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.data_inicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.data_fim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.validado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.devolvido)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.EmprestimoID }) 
            @Html.ActionLink("Detalhes", "Details", new { id=item.EmprestimoID }) 
            @Html.ActionLink("Eliminar", "Delete", new { id=item.EmprestimoID })
        </td>
    </tr>
}

</table>
