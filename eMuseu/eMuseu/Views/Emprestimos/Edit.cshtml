@model eMuseu.Models.Emprestimo

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Emprestimo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.EmprestimoID)

    <div class="form-group">
        @Html.LabelFor(model => model.data_inicio, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.data_inicio, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.data_inicio, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.data_fim, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.data_fim, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.data_fim, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Peças", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.DropDownList("PecaID", (SelectList)ViewBag.pecas, "Selecione uma Peça", new { @class = "form-control selectViewPecas" })
        </div>
        <div class="col-md-7">
            <input type="button" id="addToTable" value="Adicionar" class="btn btn-info" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>

    <div class="col-lg-12">
        <h3>Pedido</h3>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <table class="table" id="pecasTable">
                <thead>
                    <tr>
                        <th scope="col">Pecas</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.pecasEmp)
                    {
                        <tr>
                            <td id="@item.Value">@item.Text</td>
                            <td><a href="#" id="Remove" class="@item.Value">Remove</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="form-group inputs">
        @foreach (var item in ViewBag.pecasEmp)
        {
            <input type="hidden" name="pecasID" value="@item.Value" />
        }
    </div>
    </div>
    }

    @section scripts
{
        <script>
            $(document).ready(function () {
                $("#addToTable").on("click", function () {
                    var value = $(".selectViewPecas :selected").val();
                    var text = $(".selectViewPecas :selected").text();
                    if (value) {
                        $("#pecasTable").append("<tr><td id='" + value + "'>" + text + "</td><td><a href='#' id='Remove' class='" + value + "'>Remove</a></td></tr>");
                        $('a.'+ value +'').on('click', function (e) {
                            e.preventDefault();
                            var id = $(this).attr('class');
                            var value = $("#" + id).text();
                            $('.selectViewPecas').append($('<option>', {
                                value: id,
                                text: value
                            }));
                            $("#" + id).parent('tr').remove();
                        });
                        $(".inputs").append("<input type='hidden' name='pecasID' value='" + value + "'>")
                        $(".selectViewPecas :selected").remove();
                    }
                    else
                        alert("Selecione Uma Peça");
                });

                $("a#Remove").on("click", function () {
                    console.log("clicou");
                    var id = $(this).attr('class');
                    var value = $("#" + id).text();
                    $('.selectViewPecas').append($('<option>', {
                        value: id,
                        text: value
                    }));
                    $('input[type="hidden"][value="' + id + '"]').remove();
                    $("#" + id).parent('tr').remove();
                });
            });
        </script>
    }
