@model eMuseu.Models.Emprestimo

@{
    ViewBag.Title = "Create";
    //int Salary = int.Parse(ViewBag.empID);
}

<h2>Novo Empréstimo</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.data_fim, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.data_fim, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.data_fim, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Peças", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.DropDownList("PecaID", (SelectList)ViewBag.Pecas, "Selecione uma Peça", new { @class = "form-control selectViewPecas" })
        </div>
        <div class="col-md-7">
            <input type="button" id="addToTable" value="Adicionar" class="btn btn-info" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Finalizar Encomenda" class="btn btn-default" />
        </div>
    </div>

    <div class="col-lg-12">
        <h3>Pedido</h3>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <table class="table" id="pecasTable">
                <thead>
                    <tr>
                        <th scope="col">Pecas</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

</div>
}

    @section scripts
{
        <script>
        $(document).ready(function () {
            $("#addToTable").on("click", function () {
                var value = $(".selectViewPecas :selected").val();
                var text = $(".selectViewPecas :selected").text();
                if (value) {
                    $("#pecasTable").append("<tr><td>" + text + "</td><input type='hidden' name='pecasID' value='"+ value +"' >teste</input></tr > ");
                    $(".selectViewPecas :selected").remove();

                }
                else
                    alert("Selecione Uma Peça");
            });
        });
        </script>
    }
